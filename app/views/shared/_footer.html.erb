<footer>
  <div class="container">
    <div class="row pull-right">
      <div class="col-xs-12 login-links">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            <%= "#{current_user.first_name} #{current_user.last_name}" %> <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Profile', edit_user_registration_path(current_user) %></li>
              <li><a href="#">Site Settings</a></li>
              <li role="separator" class="divider"></li>
              <li class="nav-item nav-link"><%= link_to 'Logout', logout_path %></li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item nav-link"><%= link_to 'Login', login_path %></li>
        <% end %>
      </div>
    </div>
  </div>
</footer>