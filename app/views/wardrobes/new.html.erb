<div class="container">
  <div class="content">
    <%= form_for [@wardrobe] do |f| %>
      <div class="content-header"> 
        <h2>First, a few questions</h2>
        <div class="row">  

          <div class="col-md-4">
            <h3>Step 1: Choose a style</h3>
            
            <div class="form-group">
              <%= f.label :style_id %>
              <%= f.select :style_id, Style.all.collect {|t| [t.name, t.id]}, {}, {class: "form-control"} %>
            </div>

            <div class="form-group">
              <%= f.label :workouts, "Workouts per week" %>
              <%= f.text_field :workouts, type: :number, value: 3, min: 0, class: "form-control" %>
            </div>

            <p id="style_description" class="small"></p>
          </div>

          <div class="col-md-4">
            <h3>Step 2: Set a budget</h3>

            <div class="form-group">
              <%= f.label :annual_income %>
              <%= f.text_field :annual_income, type: :number, value: 84160, class: "form-control" %>
            </div>
            
            <div class="form-group">
              <%= f.label :family_size %>
              <%= f.text_field :family_size, type: :number, value: 1, min: 1, class: "form-control" %>
            </div>
    
            <p class="small">
              According to the Bureau of Labor Statistics, the average American family spent 2.8 percent of average annual household income.
            </p>            

            <div class="form-group">
              <%= f.label :monthly_budget %>
              <p id="wardrobe_monthly_budget" class="form-control-static monthly-budget"></p>
            </div>
          </div>

          <div class="col-md-4">
            <h3>Step 3: See your wardrobe</h3>
            <%= f.submit "Let's get started!", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>